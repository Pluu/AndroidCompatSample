<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.pluu.androidview.compat.ViewCompatActivity">

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/fadeOut"
		style="@style/ButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:backgroundTint="@color/swipe_color_1"
		android:text="Fade Out"/>

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/fadeIn"
		style="@style/ButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/fadeOut"
		android:backgroundTint="@color/swipe_color_1"
		android:text="Fade In"/>

	<Button
		android:id="@+id/moveOver"
		style="@style/ButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/fadeOut"
		android:text="Move Over"/>

	<Button
		android:id="@+id/moveBack"
		style="@style/ButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/fadeOut"
		android:layout_toRightOf="@+id/moveOver"
		android:text="Move Back"/>

	<Button
		android:id="@+id/rotate"
		style="@style/ButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/moveOver"
		android:text="Rotate"/>

	<LinearLayout
		android:id="@+id/container"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/rotate"
		android:orientation="vertical">

		<Button
			android:id="@android:id/button1"
			style="@style/ButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/hello_world"
			android:textAppearance="?android:textAppearanceMedium"/>
	</LinearLayout>

</RelativeLayout>
